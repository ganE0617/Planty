        <shape>
            <corners android:radius="8dp"/>
            <solid android:color="@color/slider_bg"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="8dp"/>
                <solid android:color="@color/slider_fill"/>
            </shape>
        </clip>
    </item>
</layer-list> 