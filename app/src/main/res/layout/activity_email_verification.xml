<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="#FAFAF7">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_email"
        android:tint="#CDE7BE"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일 인증이 필요합니다"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#222"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입하신 이메일로 인증 메일이 발송되었습니다.\n이메일의 링크를 클릭한 후 아래 버튼을 눌러 인증을 완료해 주세요."
        android:textSize="15sp"
        android:textColor="#444"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btn_check_verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="인증 완료 확인"
        android:backgroundTint="#CDE7BE"
        android:textColor="#222"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn_resend_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="인증 메일 다시 보내기"
        android:backgroundTint="#E0E0E0"
        android:textColor="#222"
        android:layout_marginTop="12dp"/>

</LinearLayout> 